<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleControlActivity">

    <ImageView
        android:id="@+id/imvAvatar"
        android:layout_width="224dp"
        android:layout_height="258dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/la_bai_1" />

    <ImageButton
        android:id="@+id/btnImgAdd"
        android:layout_width="163dp"
        android:layout_height="55dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_note_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbDiem"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="359dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="kết quả:"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImgAdd" />

    <Spinner
        android:id="@+id/cbDiem"
        android:layout_width="360dp"
        android:layout_height="27dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="chọn số cược"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/imvAvatar"
        tools:layout_editor_absoluteX="44dp" />

    <ListView
        android:id="@+id/lvLichSu"
        android:layout_width="407dp"
        android:layout_height="226dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKetQua"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
